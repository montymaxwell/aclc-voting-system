generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model party {
  name    String   @id
  acronym String?
  members String[]
}

model users {
  USN            String    @id
  password       String
  role           String    @default(dbgenerated("USER"))
  firstname      String
  lastname       String
  middleInitial  String
  strand         String
  voted          Boolean?  @default(false)
  voteList       Json[]    @db.Json
  createdAt      DateTime? @default(now()) @db.Timestamptz(6)

  @@map("users")
}

model candidates {
  id             String    @id
  firstname      String
  lastname       String
  middleInitial  String
  icon           String?
  party          String
  position       String
  votes          Int?      @default(0)
  createdAt      DateTime? @default(now()) @db.Timestamptz(6)
}

model votes {
  id        Int       @id @default(autoincrement())
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
  USN       String
  candidate String
}
